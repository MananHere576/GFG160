class Solution {
    // Function is to check whether two strings are anagram of each other or not.
    public static boolean areAnagrams(String s1, String s2) {

        // Your code here
        char[]ss1 = s1.toCharArray();
        char[]ss2 = s2.toCharArray();
        Arrays.sort(ss1);
        Arrays.sort(ss2);
        s1=new String(ss1);
        s2=new String(ss2);
        if(s1.equals(s2))
        {
            return true;
        }
        return false;
    }
}
